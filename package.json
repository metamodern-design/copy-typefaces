{
  "name": "@metamodern/copy-typefaces",
  "version": "2.0.1",
  "description": "Automates copying font files from typeface-* packages in your dependencies",
  "author": "Daniel C. Narey <os@metamodern.design>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/metamodern-design/copy-typefaces"
  },
  "type": "module",
  "module": "./lib/index.js",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint --fix lib/*.js",
    "release": "np",
    "sync": "git pull && git add . && git commit -m 'automated sync' && git push",
    "test": "ava test/*.js",
    "update": "updtr"
  },
  "dependencies": {
    "fs-extra": "^9.0.0"
  },
  "devDependencies": {
    "ava": "^3.8.2",
    "del": "^5.1.0",
    "eslint": "^7.0.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "np": "^5.2.1",
    "updtr": "^3.1.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "typefaces",
    "copy",
    "font",
    "files"
  ],
  "ava": {
    "nodeArguments": [
      "--experimental-modules"
    ]
  }
}
